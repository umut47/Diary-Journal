<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.ActionBar.Transparent"
    android:weightSum="2"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@drawable/image"

        >

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="#ffffff">

        <EditText
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:singleLine="true"
            android:background="@android:color/transparent"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:inputType="numberPassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:textColor="#2cbd60"
            android:hint="Kodu Giriniz"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#1c7f3e"
            android:layout_marginTop="53dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/linearLayout2" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:text="DEVAM"
            android:id="@+id/giris_devamBtn"
            android:background="@drawable/flat_buton"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Kodu Unuttum"
            android:id="@+id/button"
            android:layout_below="@+id/giris_devamBtn"
            android:layout_alignLeft="@+id/giris_devamBtn"
            android:layout_alignStart="@+id/giris_devamBtn"
            android:layout_alignRight="@+id/giris_devamBtn"
            android:layout_alignEnd="@+id/giris_devamBtn"
            android:layout_marginTop="15dp"
            android:background="@drawable/shadow_buton"
            android:textColor="#737373"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Günlük insanların bir defterle sohbetidir bir nevi içini o deftere dökmek ve sırlarını o deftere yazmaktır."
            android:id="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/button"
            android:textColor="#b1b1b1"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/goz"
            android:layout_alignTop="@+id/editText"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:background="@drawable/eye"
            android:layout_marginTop="5dp"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/imageButton4"
            android:layout_alignTop="@+id/editText"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="-5dp"
            android:background="@drawable/kilit" />


    </RelativeLayout>

</LinearLayout>